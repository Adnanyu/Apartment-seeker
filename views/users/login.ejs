<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 login" >
            <div class="card shadow mb-4">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid gap-2 mb-2">
                            <button class="btn btn-outline-success btn-block d-grid">Login</button>
                        </div>
                        <div class=" d-flex justify-content-center mb-2">
                            <span class="mx-auto">dont have an account?</span>
                        </div>
                        <div class="d-grid gap-2 mb-2">
                            <a href="/register" class="btn btn-outline-secondary btn-block d-grid">Register</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card mb-3  w-50 h-50 align-self-center m-auto" >
            <h3 class="m-auto">for test you can use</h3>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Username: aden or adnan</li>
                <li class="list-group-item">Password: aden or adnan</li>
            </ul>
        </div>
    </div>
</div>