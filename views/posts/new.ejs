<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Post</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/posts" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title"  class="form-label" >Title</label>
                <input class="form-control" type="text" name="post[title]" id="title" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="address" class="form-label" >Full Address</label>
                <input class="form-control" type="text" name="post[address]" id="address" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
              <label for="city" class="form-label" >City</label>
              <input class="form-control" type="text" name="post[city]" id="city" required>
              <div class="valid-feedback">
                  Looks good!
              </div>
          </div>
            <div class="row g-3 mb-3">
              <div class="col">
                <label for="email" class="form-label" >Email</label>
                <input type="text" class="form-control" placeholder="Example@gmail.com" aria-label="Email" id="email" name="post[contact][email]" required>
                <div class="valid-feedback">
                  Looks good!
              </div>
              </div>
              <div class="col">
                <label for="phone" class="form-label" >Phone</label>
                <input type="text" class="form-control" placeholder="Phone Number" aria-label="Phone Number" id="phone" name="post[contact][phone]" required>
                <div class="valid-feedback">
                  Looks good!
              </div>
              </div>
            </div>
            <div class="mb-3 col-3">
              <label for="datepicker" class="form-label" >Availability date</label>
              <input type="text" class="form-control " id="datepicker" name="post[availability]" required>
              <div class="valid-feedback">
                  Looks good!
              </div>
          </div>
          <div>
            <label class="form-label" for="image">Post Pictures</label>
            <div class="input-group mb-3">
                <input type="file" class="form-control" " id="image" name="image"  multiple  required>
                <label class="input-group-text" for="image">Browse</label>
            </div>
          </div>
            <div class="mb-3">
                <label for="price" class="form-label" >Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" placeholder="0.00" name="post[price]" id="price" aria-label="Amount (to the nearest dollar)" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="floor" class="form-label" >Floor</label>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="0" name="post[floor]" id="floor" aria-label="Amount (to the nearest dollar)" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="area" class="form-label" >Area</label>
                <div class="input-group">
                    <span class="input-group-text">metersquere</span>
                    <input type="text" class="form-control" placeholder="0.00" name="post[area]" id="area" aria-label="Amount (to the nearest dollar)" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="row mb-3">
            <div class="col-6 ">
                <label for="#rooms" class="col  col-form-label"># of bedrooms</label>
                <select class="form-select" id="#rooms" name="post[number_of_bedrooms]" required>
                  <option selected value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6</option>
                </select>
                <div class="valid-feedback">
                  Looks good!
              </div>
              </div>
              <div class="col-6">
                <label for="#bath" class="col col-form-label"># of bathrooms</label>
                <select class="form-select" id="#bath" name="post[number_of_bathrooms]" required>
                  <option selected value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6</option>
                </select>
                <div class="valid-feedback">
                  Looks good!
              </div>
              </div>
            </div>
            <div class="row mb-3">
                <legend class="col-form-label col-sm-2 pt-0">Amenities</legend>
                <div class="col-sm-10 offset-sm-1">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="ac" name="post[amenities]" value="ac">
                <label class="form-check-label" for="ac">
                  Ac
                </label>
              </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gym" name="post[amenities]" value="gym">
                <label class="form-check-label" for="gym">
                  Gym
                </label>
              </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="elevator" name="post[amenities]" value="elevator">
                <label class="form-check-label" for="elevator">
                  Elevator
                </label>
              </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="parking" name="post[amenities]" value="parking">
                <label class="form-check-label" for="parking">
                  Parking
                </label>
              </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="pool" name="post[amenities]" value="pool">
                <label class="form-check-label" for="pool">
                  Pool
                </label>
              </div>
            </div>
        </div>
            <div class="mb-3">
                <label for="description" class="form-label" >Description</label>
                <textarea class="form-control" type="text" name="post[description]" id="description" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">add post</button>
            </div>
        </form>
    </div>
</div>


