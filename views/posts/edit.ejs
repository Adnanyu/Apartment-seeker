<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Post</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/posts/<%= post._id.toString() %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title"  class="form-label" >Title</label>
                    <input class="form-control" type="text" name="post[title]" id="title" value="<%= post.title %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label" >Full Address</label>
                    <input class="form-control" type="text" name="post[address]" id="address" value="<%= post.address %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                  <label for="city" class="form-label" >City</label>
                  <input class="form-control" type="text" name="post[city]" id="city" value="<%= post.city %>" required>
                  <div class="valid-feedback">
                      Looks good!
                  </div>
              </div>
                <div class="row g-3 mb-3">
                  <div class="col">
                    <label for="email" class="form-label" >Email</label>
                    <input type="text" class="form-control" placeholder="Example@gmail.com" aria-label="Email" id="email" name="post[contact][email]" value="<%= post.contact.email %>" required>
                    <div class="valid-feedback">
                      Looks good!
                  </div>
                  </div>
                  <div class="col">
                    <label for="phone" class="form-label" >Phone</label>
                    <input type="text" class="form-control" placeholder="Phone Number" aria-label="Phone Number" id="phone" name="post[contact][phone]" value="<%= post.contact.phone %>" required>
                    <div class="valid-feedback">
                      Looks good!
                  </div>
                  </div>
                </div>
                <div class="mb-3 col-3">
                  <label for="datepicker" class="form-label" >Availability date</label>
                  <input type="text" class="form-control " id="datepicker" name="post[availability]"  required>
                  <div class="valid-feedback">
                      Looks good!
                  </div>
              </div>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" " id="image" name="image"  multiple >
                    <label class="input-group-text" for="image">Browse</label>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label" >Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" placeholder="0.00" name="post[price]" id="price" aria-label="Amount (to the nearest dollar)" value="<%= post.price %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="floor" class="form-label" >Floor</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="0" name="post[floor]" id="floor" aria-label="Amount (to the nearest dollar)" value="<%= post.floor %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="area" class="form-label" >Area</label>
                    <div class="input-group">
                        <span class="input-group-text">metersquere</span>
                        <input type="text" class="form-control" placeholder="0.00" name="post[area]" id="area" aria-label="Amount (to the nearest dollar)" value="<%= post.area %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                <div class="col-6 ">
                    <label for="#rooms" class="col  col-form-label"># of bedrooms</label>
                    <select class="form-select" id="#rooms" name="post[number_of_bedrooms]" required>
                        <% for(let i = 1; i < 7; i++){ %>
                            <option <%= post.number_of_bedrooms === i ? 'selected' : '' %> value="<%= i %>"><%= i %></option>
                            <% } %>
                    </select>
                    <div class="valid-feedback">
                      Looks good!
                  </div>
                  </div>
                  <div class="col-6">
                    <label for="#bath" class="col col-form-label"># of bathrooms</label>
                    <select class="form-select" id="#bath" name="post[number_of_bathrooms]" >
                      <% for(let i = 1; i < 7; i++){ %>
                        <option <%= post.number_of_bathrooms === i ? 'selected' : '' %> value="<%= i %>"><%= i %></option>
                        <% } %>
                    </select>
                    <div class="valid-feedback">
                      Looks good!
                  </div>
                  </div>
                </div>
                <div class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Amenities</legend>
                    <div class="col-sm-10 offset-sm-1">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="ac" name="post[amenities]" value="ac" <%= post.amenities.includes('ac') ? 'checked' : '' %>>
                    <label class="form-check-label" for="ac">
                      Ac
                    </label>
                  </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gym" name="post[amenities]" value="gym" <%= post.amenities.includes('gym') ? 'checked' : '' %>>
                    <label class="form-check-label" for="gym">
                      Gym
                    </label>
                  </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="elevator" name="post[amenities]" value="elevator" <%= post.amenities.includes('elevator') ? 'checked' : '' %>>
                    <label class="form-check-label" for="elevator">
                      Elevator
                    </label>
                  </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="parking" name="post[amenities]" value="parking" <%= post.amenities.includes('parking') ? 'checked' : '' %>>
                    <label class="form-check-label" for="parking">
                      Parking
                    </label>
                  </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="pool" name="post[amenities]" value="pool" <%= post.amenities.includes('pool') ? 'checked' : '' %>>
                    <label class="form-check-label" for="pool">
                      Pool
                    </label>
                  </div>
                </div>
            </div>
                <div class="mb-3">
                    <label for="description" class="form-label" >Description</label>
                    <textarea class="form-control" type="text" name="post[description]" id="description" required><%= post.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <% post.images.forEach((img, i) => {  %>
    
                    <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
                    <% })%>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>


